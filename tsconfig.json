{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es6"],
    "moduleResolution": "node",
    "target": "esnext"
  },
  "include": [
    "src/**/*",
    "./dist/**/*"
  ],
  "files": ["src/index.ts", "./dist/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
